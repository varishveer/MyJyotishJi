    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyJyotishJiWebDesign.styles.css" asp-append-version="true" />

    <style>
        #astrologerDropdown {
            display: none;
            position: absolute;
            background-color: white;
            border: 1px solid #ccc;
            box-shadow: 0 8px 16px rgba(0,0,0,0.2);
            z-index: 1;
        }

            #astrologerDropdown ul {
                list-style-type: none;
                padding: 0;
                margin: 0;
            }

                #astrologerDropdown ul li {
                    padding: 8px 16px;
                }

                    #astrologerDropdown ul li a {
                        text-decoration: none;
                        color: black;
                        display: block;
                    }

                    #astrologerDropdown ul li:hover {
                        background-color: #ddd;
                    }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary bg-light">
        <div class="container-fluid">

            <a class="navbar-brand" href="#"> <img src="~/img/logo.png" height="60px" width="100px" /></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav" style="padding-left:400px;">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/Home/HomePage">Home</a>
                    </li>
                    <li class="nav-item">

                        <a class="nav-link" href="/Home/Chat">Chat with Astrologer</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Talk">Talk with Astrologer</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/BookAPooja">Book a Pooja</a>
                    </li>
                   @*  <li class="nav-item">
                        <a class="nav-link" href="/Home/BookAAppointment">Book A Appointment</a>

                    </li> *@
                    @* <li class="nav-item">
                        <a class="nav-link" href="/Home/Mall">Mall</a>

                    </li> *@
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/FreeKundli">FreeKundli </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Blog">blog</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/SignUpUser">Login</a>
                    </li>
                    <li class="nav-item">
                       @*  <img src="~/img/astrologer.jpg" id="astrologerImage" style="width:50px;height:50px;" /> *@
                        <svg xmlns="http://www.w3.org/2000/svg" id="astrologerImage"  width="2em" height="2em" viewBox="0 0 36 36"><path fill="currentColor" d="M30.61 24.52a17.16 17.16 0 0 0-25.22 0a1.5 1.5 0 0 0-.39 1v6A1.5 1.5 0 0 0 6.5 33h23a1.5 1.5 0 0 0 1.5-1.5v-6a1.5 1.5 0 0 0-.39-.98" class="clr-i-solid clr-i-solid-path-1" /><circle cx="18" cy="10" r="7" fill="currentColor" class="clr-i-solid clr-i-solid-path-2" /><path fill="none" d="M0 0h36v36H0z" /></svg>
                        <div id="astrologerDropdown">
                            <ul>
                                <li><a href="/Home/Profile">Profile</a></li>
                                <li><a href="/Home/Notification">Notification</a></li>
                                <li><a href="/Home/Wallet">Wallet</a></li>
                                <li><a href="/Home/Orders">Orders</a></li>
                                <li><a href="/Home/CustomerSupport">Customer Support</a></li>
                            </ul>
                        </div>
                    </li>

                    

                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

  @*   <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - MyJyotishJiWebDesign - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@
    <script>
        const astrologerImage = document.getElementById('astrologerImage');
        const astrologerDropdown = document.getElementById('astrologerDropdown');

        astrologerImage.addEventListener('click', () => {
            astrologerDropdown.style.display = astrologerDropdown.style.display === 'none' ? 'block' : 'none';
        });

        document.addEventListener('click', (event) => {
            if (!astrologerImage.contains(event.target) && !astrologerDropdown.contains(event.target)) {
                astrologerDropdown.style.display = 'none';
            }
        });
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
   
    @await RenderSectionAsync("Scripts", required: false)
</body>
