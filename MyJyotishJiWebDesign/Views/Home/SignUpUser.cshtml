@{
    ViewData["Title"] = "SignUpUser";
    Layout = null;
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/MyJyotishJiWebDesign.styles.css" asp-append-version="true" />

 <style>

    body {
        font-family: Arial, sans-serif;
    }

    .padding_desktop_view {
        padding: 20px;
        max-width: 500px;
        margin: auto;
    }

    .subheading_for_notification {
        font-size: 16px;
        color: #333;
    }

    .mobile_number_enter_section h6 {
        font-size: 18px;
        color: #555;
    }

    .box_enter_mobile_number {
        display: flex;
        align-items: center;
    }

    .country_btn_number_registration {
        margin-right: 10px;
    }

        .country_btn_number_registration img {
            width: 24px;
            height: 16px;
        }

    .country_select {
        margin-right: 10px;
        padding: 8px;
        font-size: 16px;
    }

    .form-control {
        width: 100%;
        padding: 8px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .get_otp_btn {
        margin-top: 10px;
        padding: 10px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        display: flex;
        align-items: center;
        width:100%;
        text-align:center;
    }

        .get_otp_btn i {
            margin-left: 5px;
        }

    .policy-text {
        margin-top: 10px;
        font-size: 14px;
        color: #777;
    }

        .policy-text a {
            color: #007bff;
            text-decoration: none;
        }

            .policy-text a:hover {
                text-decoration: underline;
            }

    .container {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh; /* Full viewport height */
    }
 </style>

<div class="padding_desktop_view">
    <h6 class="subheading_for_notification">
        <span>You will receive a 4 digit code</span>
        <br> for verification
    </h6>
    <div class="mobile_number_enter_section">
        <h6>Enter your phone number</h6>
        <div class="box_enter_mobile_number">
            <div class="country_btn_number_registration">
                <img alt="flag" class="mat-img" src="https://aws.astrotalk.com/assets/images/in.webp">
            </div>
            <select name="countryCodes" class="country_select">
                <option value="+91" selected>+91 India</option>
                <!-- Add other countries here -->
            </select>
            <input id="mobileNo" name="mobNo" type="text" class="form-control" placeholder="Enter mobile no." pattern="[1-9]{1}[0-9]{9}" required>
        </div>
        <a href="/Home/OtpVerification">
            <button href="OtpVerification" class="get_otp_btn ">
                GET OTP
                <i class="fa fa-arrow-right"></i>
            </button>
        </a>
        <div class="policy-text">
            <p class="terms-line">
                By Signing up, you agree to our
                <a href="" rel="noopener" target="_blank">Terms of Use</a>
                and
                <a href="" rel="noopener" target="_blank">Privacy Policy</a>
            </p>
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>