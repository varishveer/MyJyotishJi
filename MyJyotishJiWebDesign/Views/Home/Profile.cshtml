<style>
    .outerDiv {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .profile-settings {
        background-color: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        width: 600px;
        max-width: 90%;
    }

        .profile-settings h2 {
            text-align: center;
            margin-bottom: 20px;
        }

    .notifications, .language, .actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .actions {
        justify-content: space-around;
    }

    button {
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    .edit-profile {
        background-color: #007bff;
        color: white;
    }

    .logout {
        background-color: #ff4d4d;
        color: white;
    }

    .delete-account {
        background-color: #dc3545;
        color: white;
    }

    input[type="checkbox"] {
        width: 20px;
        height: 20px;
    }

    .edit-language {
        color: #28a745;
        cursor: pointer;
    }
</style>
<div class="outerDiv">
    <div class="profile-settings">
        <h2>Profile Settings</h2>
        <div class="notifications">
            <div>
                <h3>Notifications</h3>
                <div>
                    <label for="astromall-chat"> chat</label>
                    <input type="checkbox" id="astromall-chat" checked>
                </div>
                <div>
                    <label for="live-events">Live Events</label>
                    <input type="checkbox" id="live-events" checked>
                </div>
            </div>
        </div>
        <div class="language">
            <h3>My Language</h3>
            <span class="edit-language">Edit your languages</span>
        </div>
        <div class="actions">
            <a href="/Home/EditProfile">
                <button class="edit-profile">Edit Profile</button>
            </a>
            <button class="logout">Logout from all other devices</button>
            <button class="delete-account">Delete My Account</button>
        </div>
    </div>


</div>
