<style>
    .card-custom {
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 16px;
        width: 300px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        margin: 10px;
    }

    .card-img-wrapper {
        text-align: center;
    }

    .card-img-top {
        border-radius: 50%;
        width: 100px;
        height: 100px;
    }

    .card-title {
        font-size: 1.2em;
        margin: 16px 0 8px;
    }

    .card-text {
        margin: 8px 0;
        font-size: 0.9em;
    }

    .btn-primary {
        display: inline-block;
        padding: 10px 20px;
        font-size: 0.9em;
        color: #fff;
        background-color: #007bff;
        border: none;
        border-radius: 4px;
        text-decoration: none;
        text-align: center;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }



    .astrologer-container {
        display: flex;
        align-items: center;
        gap: 10px; /* Space between elements */
    }

    .header {
        display: flex;
        align-items: center;
    }

    .heading {
        margin: 0;
    }

    .balance-info {
        display: flex;
        align-items: center;
    }

    .available-balance {
        display: flex;
        align-items: center;
    }

    .actions {
        display: flex;
        align-items: center;
    }

    .recharge-link,
    .filter-button,
    .sort-button {
        margin-right: 10px; /* Space between links and buttons */
    }

    .search-container {
        display: flex;
        align-items: center;
    }

    .search-input {
        margin-right: 5px; /* Space between input and icon */
    }

</style>

