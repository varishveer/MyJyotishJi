<div class="container1 container">
    <h1>Add New Address</h1>
    <form>
        <div class="form-group">
            <div class="input-field">
                <label for="name">Name: *</label>
                <input type="text" id="name" placeholder="Enter name">
                <span class="error-icon"></span>
            </div>
            <div class="input-field">
                <label for="mobile-number">Mobile Number: *</label>
                <div style="display: flex;">
                    <select id="mobile-country-code">
                        <option value="+91">+91 In...</option>
                        <option value="+1">+1 US...</option>
                    </select>
                    <input type="number" id="mobile-number" placeholder="Enter Your Number">
                    <span class="error-icon"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="input-field">
                <label for="email">Email ID: *</label>
                <input type="email" id="email" placeholder="55811615">
                <span class="error-icon"></span>
            </div>
            <div class="input-field">
                <label for="alternative-number">Alternative Number</label>
                <div style="display: flex;">
                    <select id="alternative-country-code">
                        <option value="+91">+91 In...</option>
                        <option value="+1">+1 US...</option>
                    </select>
                    <input type="number" id="alternative-number" placeholder="Enter alternative mobile no.">
                    <span class="check-icon"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="input-field">
                <label for="city">City: *</label>
                <input type="text" id="city" placeholder="City">
                <span class="error-icon"></span>
            </div>
            <div class="input-field">
                <label for="flat-no">Flat No: *</label>
                <input type="text" id="flat-no" placeholder="Flat No / Building No / House No">
                <span class="error-icon"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="input-field">
                <label for="pincode">PinCode: *</label>
                <input type="number" id="pincode" placeholder="Postal Code / Pincode">
                <span class="error-icon"></span>
            </div>
            <div class="input-field">
                <label for="locality">Locality: *</label>
                <input type="text" id="locality" placeholder="Locality">
                <span class="error-icon"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="input-field">
                <label for="state">State / Province: *</label>
                <input type="text" id="state" placeholder="State">
                <span class="error-icon"></span>
            </div>
            <div class="input-field">
                <label for="country">Country: *</label>
                <input type="text" id="country" placeholder="Country">
                <span class="error-icon"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="input-field">
                <label for="landmark">Landmark</label>
                <input type="text" id="landmark" placeholder="Landmark (Optional)">
                <span class="check-icon"></span>
            </div>
        </div>

        <button type="submit" class="btn">Save Address</button>
    </form>

    
</div>
