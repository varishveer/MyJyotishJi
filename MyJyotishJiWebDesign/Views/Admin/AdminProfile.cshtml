@{
    Layout = "AdminLayout";
}
<style>
    .outerDiv {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .profile-header {
        display: flex;
        align-items: center;
        border-bottom: 2px solid #eee;
        padding-bottom: 20px;
        margin-bottom: 20px;
    }

    .profile-picture {
        flex: 1;
        text-align: center;
    }

        .profile-picture img {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid #ddd;
        }

    .profile-info {
        flex: 2;
        padding-left: 20px;
    }

        .profile-info h1 {
            margin: 0;
            font-size: 24px;
        }

        .profile-info p {
            margin: 5px 0;
            color: #555;
        }

</style>
<div class="outerDiv">
    <div class="container">
        <div class="profile-header">
            <div class="profile-picture">
                <img src="~/Img/Astrologer.jpg" alt="Profile Picture">
            </div>
            <div class="profile-info">
                <h1>John Doe</h1>
                <p>Email: john.doe@example.com</p>
                <p>Mobile: +123 456 7890</p>
            </div>
        </div>
    </div>
</div>