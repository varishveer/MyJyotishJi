@{
    Layout = "AdminLayout";
}


<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<link href="https://cdn.datatables.net/2.1.3/css/dataTables.dataTables.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/2.1.3/js/dataTables.min.js"></script>
<div class="bg-light">
    <div class="container mt-5">
        <h2 class="mb-4">Pooja List</h2>
       <a href="/Admin/AddPooja">
            <button class="btn btn-success" style="background-color: #ec4b14;">Add New</button>
       </a>
        <table id="DataTable" class="table table-bordered">
           
        </table>
    </div>

</div>



<script>
    $(document).ready(function () {
        function fetchData() {
            $.ajax({
                url: "https://localhost:7118/api/Admin/PoojaList",
                type: 'GET',
                success: function (result) {
                    let htmls = '<thead><tr><th>Id</th><th>Pooja</th><th>DateAdded</th></thead><tbody>';

                    $.each(result.data, function (key, item) {
                        htmls += '<tr>';
                        htmls += `<td class="text-center">${item.id}</td>`;
                        htmls += `<td class="text-center">${item.name}</td>`;
                        htmls += `<td class="text-center">${item.dateAdded}</td>`;
                       


                        htmls += '</tr>';
                    });

                    htmls += '</tbody>';
                    $('#DataTable').html(htmls);
                    $('#DataTable').DataTable();
                },
                error: function (errormessage) {
                    console.error('Error fetching data:', errormessage.responseText);
                }
            });
        }

        // Load all records by default
        fetchData();
    });
</script>